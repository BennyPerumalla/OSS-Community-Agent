# OSS Community Agent - Environment Configuration
# Single consolidated configuration file

# ====================
# REDDIT API CREDENTIALS
# ====================
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USERNAME=your_username
REDDIT_PASSWORD=your_password
USER_AGENT=oss-community-agent/1.0 (by u/your_username)

# ====================
# AI API CONFIGURATION
# ====================
# Groq API (FREE - Primary)
GROQ_API_KEY=your_api_key
GROQ_MODEL=llama-3.1-8b-instant

# OpenAI API (Backup)
OPENAI_API_KEY=your_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# ====================
# RAG SYSTEM CONFIGURATION
# ====================
RAG_CORPUS_DIR=data/corpus
RAG_DB_DIR=rag_db
RAG_COLLECTION=oss_docs
TOP_K=4
EMBED_PROVIDER=openai
LLM_PROVIDER=groq

# ====================
# CHROMADB CONFIGURATION (Optional)
# ====================
CHROMA_HOST=your_host
CHROMA_API_KEY=your_api_key

# ====================
# AGENT CONFIGURATION
# ====================
DRY_RUN=true
AUTO_APPROVAL=false
CONFIDENCE_THRESHOLD=0.7
MAX_REQUESTS_PER_HOUR=20

# ====================
# DATABASE CONFIGURATION
# ====================
DATABASE_PATH=data/agent_data.db

# ====================
# UI CONFIGURATION
# ====================
UI_THEME=light
AUTO_REFRESH_INTERVAL=30
DEBUG_MODE=false